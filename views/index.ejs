<%- include('./partials/head'); -%>
<%- include('./partials/header'); -%>


<section class="homepage_posts">
	<ul>
		<% posts.forEach(post => { %>
			<li>
				<h3><a href="/posts/<%= post.id %>"><%- post.title.rendered %></a></h3>
				<p><%= post.featured_media %></p>
				<p><%- post.date %></p>
				<a href="/author/<%= post.author %>">
					<p><%- post.yoast_head_json.author %></p>
				</a>
				
				<img decoding="async" src="<%= post.yoast_head_json.og_image[0].url %>" alt="" width="<%= post.yoast_head_json.og_image[0].width %>">
			</li>
		<% }); %>	
	</ul>
</section>





<%- include('./partials/foot'); -%>